<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ATM">
    
    <Style TargetType="Window" x:Key="WindowStyle">
        <Setter Property="Background" Value="#2f4a65"/>
    </Style>

    <Style TargetType="GroupBox" x:Key="GroupBoxStyle">
        <Setter Property="Background" Value="#f1f2f6"/>
    </Style>

    <Style TargetType="Grid" x:Key="ATMStyle">
        <Setter Property="Background" Value="#f1f2f6"/>
    </Style>
    
    <Style TargetType="Button" x:Key="MenuButton">
        <Setter Property="Background" Value="#f0f1f6"/>
        <Setter Property="Foreground" Value="#245b81"/>
     </Style>
    
    <Style TargetType="Button" x:Key="NegativeButton">
        <Setter Property="Background" Value="#ec7f84"/>
        <Setter Property="Foreground" Value="#245b81"/>
    </Style>
    
    <Style TargetType="Button" x:Key="PositiveButton">
        <Setter Property="Background" Value="#24c9b9"/>
        <Setter Property="Foreground" Value="#245b81"/>
    </Style>


</ResourceDictionary>